<div class='container'>
    <form>
        <div class='form-group col-xs-6 col-md-6 ' >

          {{textarea type="text" value=commentText placeholder="..." class='form-control' rows="4" cols="15"}}
        </div>
        <div class='form-group col-xs-12 col-md-12' >
            <button class='btn-primary ' {{action "addComment" commentText}}>Add Comment</button>
            <button type="reset" class='btn-danger'>Reset Comment</button>
        </div>
    </form>

  {{#each model as |data|}}
    {{#if data.parent_id}}
    {{else}}
        {{comments-list comment=data}}
    {{/if}}
  {{/each}}
</div>  
  